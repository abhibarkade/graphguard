{
  "name": "graphguard",
  "version": "1.0.0",
  "description": "High-performance, enterprise-grade GraphQL Schema Registry built with NestJS, Fastify, and TypeORM.",
  "main": "dist/main.js",
  "scripts": {
    "dev": "ts-node src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "start:dev": "ts-node src/main.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:infra": "docker-compose up -d",
    "docker:infra:down": "docker-compose down",
    "docker:clean": "docker-compose -f docker-compose.dev.yml down -v && docker-compose down -v"
  },
  "keywords": [],
  "author": "Abhi Barkade",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abhibarkade/graphguard.git"
  },
  "engines": {
    "node": ">=18"
  },
  "type": "commonjs",
  "dependencies": {
    "@apollo/server": "^5.2.0",
    "@as-integrations/fastify": "^3.1.0",
    "@nestjs/apollo": "^13.2.3",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.1.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.12",
    "@nestjs/graphql": "^13.2.3",
    "@nestjs/platform-fastify": "^11.1.12",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "axios": "^1.13.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dotenv": "^17.2.3",
    "graphql": "^16.12.0",
    "ioredis": "^5.9.2",
    "nestjs-pino": "^4.5.0",
    "pg": "^8.17.1",
    "pino": "^10.2.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.28"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "@types/pg": "^8.16.0",
    "@types/pino": "^7.0.4",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
